                Name="btnChange"/>

        <TextBlock Canvas.Left="226" Canvas.Top="217" TextWrapping="WrapWithOverflow"
                   FontSize="22" TextAlignment="Center" Width="348"
                   Name="wordText" >
            <Bold>Rabbit (n)</Bold>
        </TextBlock>

        <TextBlock Canvas.Left="230" Canvas.Top="267" TextWrapping="WrapWithOverflow"
                   FontSize="20" Width="340" TextAlignment="Center"
                   Name="spellingText">
         /ˈræb.ɪt/
        </TextBlock>

        <TextBlock Canvas.Left="170" Canvas.Top="307" TextWrapping="WrapWithOverflow"
                   FontSize="20" Width="460" TextAlignment="Center"
                   Name="meaningText">
        Con thỏ
        </TextBlock>


    </Canvas>
</Window>
