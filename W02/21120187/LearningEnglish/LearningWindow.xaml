<Window x:Class="LearningEnglish.LearningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningEnglish"
        mc:Ignorable="d"
        Title="LearningWindow" Height="450" Width="800">

    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
        <Image Source="Images/Design/word01.jpg" Margin="10"
       Height="171" Width="276"
       Name="wordImg"/>

            <TextBlock Margin="5"
           TextWrapping="WrapWithOverflow"
   FontSize="22" TextAlignment="Center" Width="348"
   Name="wordText" Foreground="Red" Text="Rabbit (n)"
   FontWeight="Bold"/>

            <TextBlock 
           TextWrapping="WrapWithOverflow" Margin="5"
   FontSize="20" Width="340" TextAlignment="Center"
   Name="spellingText" Text="/ˈræb.ɪt/"/>

            <TextBlock Margin="5"
           TextWrapping="WrapWithOverflow"
   FontSize="20" Width="460" TextAlignment="Center"
   Name="meaningText" Foreground="Blue" Text="con thỏ"/>

            <Button Content="Change"  Margin="10"
                Height="54" Width="112"
        Click="btnChange_Click" FontSize="20"
        Name="btnChange"/>

        

        </StackPanel>
    </Grid>
</Window>
