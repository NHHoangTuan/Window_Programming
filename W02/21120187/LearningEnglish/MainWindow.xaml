<Window x:Class="LearningEnglish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningEnglish"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel VerticalAlignment="Center">

            <Button Content="Quiz" Margin="10"
                    Click="btnQuiz_Click" FontSize="50" 
                    Name="btnQuiz"/>

            <Button x:Name="btnLearn" Content="Learn"
                    FontSize="50" Click="btnLearn_Click"
                    Margin="10"/>

            <Button x:Name="btnTutorial" Content="Huong dan su dung"
                    FontSize="50" Click="btnTutorial_Click"
                    Margin="10"/>

            <Button x:Name="btnExit" Content="Exit"
                    FontSize="50" Click="btnExit_Click"
                    Margin="10"/>

        </StackPanel>
        

    </Grid>
</Window>
